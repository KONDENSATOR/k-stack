extends layout

block content
  .container 
    .row
      .col-xs-10.col-xs-offset-1.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
        .login-form
          form(action="/admin/login", method="POST")
            .form-group
              input#inp-usr.form-control(type='text', name="username", placeholder='Användarnamn')

            .form-group
              input#inp-pass.form-control(type='password', name="password", placeholder='Lösenord')

            input.btn.btn-block.btn-info(type="submit", value="Logga in")